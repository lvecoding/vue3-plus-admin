{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["element-plus/global", "vite/client"],
    "noImplicitAny": false,
    "jsxImportSource": "vue"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/pages/System/Category/formItems.tsx"],
  "exclude": ["node_modules", "src/assets/**/*"]
}
